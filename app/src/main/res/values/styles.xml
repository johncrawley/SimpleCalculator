<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item> <!-- Notification Bar -->
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:windowBackground">@color/dark_window_background</item>
        <item name="calculatorDisplayBackground">@color/dark_display_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/displayText</item>
        <item name="materialButtonStyle">@style/materialCalculatorButton</item>
        <item name="operatorButtonStyle">@style/materialCalculatorOperatorButton</item>
        <item name="editButtonStyle">@style/materialCalculatorEditButton</item>
        <item name="memoryButtonStyle">@style/materialCalculatorMemoryButton</item>
        <item name="equalsButtonStyle">@style/materialCalculatorEqualsButton</item>
        <item name="android:textColorHighlight">@color/highlighted_text</item>
    </style>


    <style name="materialCalculatorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_button_text</item>
        <item name="fontFamily">@font/play_bold</item>
        <item name="cornerRadius">22dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundColor">@color/background</item>
        <item name="strokeColor">@color/buttonOutline</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>


    <style name="materialCalculatorOperatorButton" parent="materialCalculatorButton">
        <item name="android:textColor">@color/dark_operator_button_text</item>
    </style>

    <style name="materialCalculatorEditButton" parent="materialCalculatorButton">
        <item name="android:textColor">@color/dark_edit_button_text</item>
    </style>

    <style name="materialCalculatorMemoryButton" parent="materialCalculatorButton">
        <item name="android:textColor">@color/dark_memory_button_text</item>
    </style>

    <style name="materialCalculatorEqualsButton" parent="materialCalculatorButton">
        <item name="android:textColor">@color/dark_equals_button_text</item>
    </style>

</resources>
